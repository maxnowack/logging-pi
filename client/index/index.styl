html, body
  background-color #151515
  height 100%
  color rgba(255,255,255,.7)
  font-family "Helvetica Neue"
  margin 0
  padding 0

.boxes
  display flex
  .box
    height 200px
    width 200px
    background-color rgba(#252525,.6)
    display flex
    flex-direction column
    align-items center
    justify-content center
    margin 5px
    .name
      opacity .5
      font-size 12px
    .value
      font-size 40px
